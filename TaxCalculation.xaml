<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccountingSoftware.TaxCalculation"
             Title="">
    <StackLayout>
        <Label Text="Taxable Amount:" FontSize="Title"  HorizontalOptions ="Center"  />
        <Entry x:Name="TaxableAmountEntry" WidthRequest="200"
               HorizontalOptions="Center"
               Keyboard="Numeric" Margin="0,0,0,20" />

        <Label Text="Tax Rate:" FontSize="Title"  HorizontalOptions="Center"  />
        <Entry x:Name="TaxRateEntry" 
               WidthRequest="200"
               HorizontalOptions="Center"
               Keyboard="Numeric" Margin="0,0,0,20" />

        <Button Text="Calculate Tax" Clicked="OnCalculateTaxClicked"  WidthRequest="200" Margin="0,0,0,20" />

        <Label x:Name="TaxAmountLabel" />
    </StackLayout>
</ContentPage>