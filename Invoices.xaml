<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AccountingSoftware.Invoices"
             Title="">
    <StackLayout>
        <Label Text="Product or Service Description:" />
        <Editor x:Name="DescriptionEntry" HeightRequest="100" 
               WidthRequest="500"
               HorizontalOptions="Start"
               CursorPosition="0"
          Margin="0,0,0,20" />

        <Label Text="Price:" />
        <Entry x:Name="PriceEntry" WidthRequest="200"
               HorizontalOptions="Start"
               Keyboard="Numeric" Margin="0,0,0,20" />

        <Label Text="Payment Terms:" />
        <Entry x:Name="PaymentTermsEntry" Margin="0,0,0,20" />

        <Button Text="Generate Invoice" Clicked="OnGenerateInvoiceClicked" WidthRequest="200" Margin="0,0,0,20"/>
    </StackLayout>
</ContentPage>
